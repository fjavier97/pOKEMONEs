<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import customfx.scene.control.*?>
<?import javafx.util.Pair?>
<?import java.util.LinkedList?>
<?import java.lang.String?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<fx:root type="com.pokemon.pokemones.core.Componente" fx:controller="com.pokemon.pokemones.controller.PokemonListController"
	xmlns="https://javafx.com/javafx/8"
	xmlns:fx="https://javafx.com/fxml">
	<menus>
		<LinkedList>
			<MenuDefinition text="modificar" path="/editar" onAction="#modificar"/>
			<MenuDefinition text="nuevo" path="/editar" onAction="#crear"/>
			<MenuDefinition text="eliminar" path="/editar" onAction="#eliminar"/>
			<MenuDefinition text="ver" path="/editar" onAction="#ver"/>	
			<MenuDefinition text="importar" path="/archivo" onAction="#importar"/>		
		</LinkedList>
	</menus>
	<content>
		<BorderPane >
			<center>
				<Pagination fx:id="paginator"/>
				<fx:define>
					<TableView fx:id="tableview">
						<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
						<columns>
							<TableColumn text="nombre">
								<cellValueFactory><PropertyValueFactory property="nombre"/></cellValueFactory>
							</TableColumn>
							<TableColumn text="no">
								<cellValueFactory><PropertyValueFactory property="pokedexNo"/></cellValueFactory>
							</TableColumn>
							<TableColumn text="tipos">	
								<columns>
									<TableColumn text="Tipo 1">
										<cellValueFactory><PropertyValueFactory property="tipo1"/></cellValueFactory>
									</TableColumn>
									<TableColumn text="Tipo 2">
										<cellValueFactory><PropertyValueFactory property="tipo2"/></cellValueFactory>
									</TableColumn>
								</columns>						
							</TableColumn>
							<TableColumn text="base stats">
								<columns>
									<TableColumn text="ATK">
										<cellValueFactory><PropertyValueFactory property="base_ATK"/></cellValueFactory>
									</TableColumn>
									<TableColumn text="DEF">
										<cellValueFactory><PropertyValueFactory property="base_DEF"/></cellValueFactory>
									</TableColumn>
									<TableColumn text="SPA">
										<cellValueFactory><PropertyValueFactory property="base_SPA"/></cellValueFactory>
									</TableColumn>
									<TableColumn text="SPD">
										<cellValueFactory><PropertyValueFactory property="base_SPD"/></cellValueFactory>
									</TableColumn>
									<TableColumn text="SPE">
										<cellValueFactory><PropertyValueFactory property="base_SPE"/></cellValueFactory>
									</TableColumn>
									<TableColumn text="HP">
										<cellValueFactory><PropertyValueFactory property="base_HP"/></cellValueFactory>
									</TableColumn>
								</columns>
							</TableColumn>
						</columns>
					</TableView>
				</fx:define>
			</center>
		</BorderPane>
	</content>
</fx:root>

