<fx:root type="com.pokemon.pokemones.core.View" fx:controller="com.pokemon.pokemones.component.controller.PokemonViewController"
	xmlns="https://javafx.com/javafx/8"
	xmlns:fx="https://javafx.com/fxml">
	<menus>
		<LinkedList>
		</LinkedList>
	</menus>
	<content>
		<BorderPane >
			<top>
				<HBox >
					<Button fx:id="atras" text="atras" onAction="#atras"/>
				</HBox>
			</top>
			<center>
				<BorderPane >
					<top>
						<Text fx:id="nombre" textAlignment="CENTER">
							<font><Font size="35.0" name="Arial Black"/></font>							
						</Text>
					</top>
					<center>
						<StarChart fx:id="grafico" maxValue="200" autoAdjustOverflow="false" areaColor="BLUE" gridAreaColor="WHITE"/>
					</center>
				</BorderPane>
			</center>
		</BorderPane>
	</content>
</fx:root>