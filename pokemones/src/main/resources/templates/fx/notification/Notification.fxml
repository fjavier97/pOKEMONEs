<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Background?>

<!-- fx:controller="com.pokemon.pokemones.core.NotificationNode" -->
<fx:root xmlns="https://javafx.com/javafx/8" xmlns:fx="https://javafx.com/fxml"
	type="customfx.scene.control.NotificationCellGraphic" >	
	
	<BorderPane HBox.hgrow="SOMETIMES" >
		<top>
			<HBox prefHeight="35">
				<Button fx:id="closeButton" text="X"/>
				<Text fx:id="texto" HBox.hgrow="SOMETIMES" textAlignment="CENTER"/>
			</HBox>
		</top>
		<center>
			<TitledPane fx:id="aditionalInfo" expanded="false">
				<background>
					<Background fx:constant="EMPTY" />
				</background>
				<Label text="funciona"/>
			</TitledPane>
		</center>
	</BorderPane>
	
	<Pane fx:id="colorPane" prefWidth="35"/>
	
</fx:root>

